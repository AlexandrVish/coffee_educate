@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<h1>@ViewData["Title"]</h1>*@

<div class="account-pages pt-2 pt-sm-5 pb-4 pb-sm-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xxl-4 col-lg-5">
                <div class="card">

                    <!-- Logo -->
                    <div class="card-header pt-4 pb-4 text-center bg-primary">
                        <a href="/">
                            <span><img src="/images/logo.png" alt="" height="70"></span>
                        </a>
                    </div>

                    <div class="card-body p-4">

                        <div class="text-center w-75 m-auto">
                            <h4 class="text-dark-50 text-center pb-0 fw-bold">Вход</h4>
                            <p class="text-muted mb-4">Для входа введите свой email адрес и пароль.</p>
                        </div>

                        <form id="account" method="post">

                            <div class="mb-3">
                                <label asp-for="Input.Email" for="emailaddress" class="form-label">Email</label>
                                <input class="form-control" asp-for="Input.Email" type="email" id="emailaddress" autocomplete="username" required="" placeholder="Введите Ваш email адрес">
                            </div>

                            <div class="mb-3">
                                <a asp-page="./ForgotPassword" class="text-muted float-end"><small>Забыли свой пароль?</small></a>
                                <label asp-for="Input.Password" for="password" class="form-label">Пароль</label>
                                <div class="input-group input-group-merge">
                                    <input type="password" asp-for="Input.Password" id="password" class="form-control" placeholder="Введите свой пароль">
                                    <div class="input-group-text" data-password="false">
                                        <span class="password-eye"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="mb-3 mb-3">
                                <div class="form-check">
                                    <input asp-for="Input.RememberMe" type="checkbox" class="form-check-input" id="checkbox-signin" checked>
                                    <label asp-for="Input.RememberMe" class="form-check-label" for="checkbox-signin">Запомнить меня?</label>
                                    @*@Html.DisplayNameFor(m => m.Input.RememberMe)*@
                                </div>
                            </div>

                            <div class="mb-3 mb-0 text-center">
                                <button class="btn btn-primary" type="submit"> Вход </button>
                            </div>

                        </form>
                    </div> <!-- end card-body -->
                </div>
                <!-- end card -->

                <div class="row mt-3">
                    <div class="col-12 text-center">
                        <p class="text-muted">У Вас нет учетной записи? <a asp-page="./Register" class="text-muted ms-1"><b>Регистрация</b></a></p>
                    </div> <!-- end col -->
                </div>
                <!-- end row -->

            </div> <!-- end col -->
        </div>
        <!-- end row -->
    </div>
    <!-- end container -->
</div>


