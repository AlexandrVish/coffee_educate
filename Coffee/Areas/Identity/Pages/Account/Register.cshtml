@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<h1>@ViewData["Title"]</h1>*@

<div class="account-pages pt-2 pt-sm-5 pb-4 pb-sm-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xxl-4 col-lg-5">
                <div class="card">
                    <!-- Logo-->
                    <div class="card-header pt-4 pb-4 text-center bg-primary">
                        <a href="/">
                            <span><img src="/images/logo.png" alt="" height="70"></span>
                        </a>
                    </div>

                    <div class="card-body p-4">

                        <div class="text-center w-75 m-auto">
                            <h4 class="text-dark-50 text-center mt-0 fw-bold">Регистрация</h4>
                            <p class="text-muted mb-4">Нет учетной записи? Создайте учетную запись, это займет менее минуты</p>
                        </div>

                        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">

@*                            <div class="mb-3">
                                <label for="fullname" class="form-label">Full Name</label>
                                <input class="form-control" type="text" id="fullname" placeholder="Enter your name" required>
                            </div>*@

                            <div class="mb-3">
                                <label asp-for="Input.Email" class="form-label">Email адрес</label>
                                <input asp-for="Input.Email" autocomplete="username" class="form-control" type="email" required placeholder="Введите свой email">
                            </div>

                            <div class="mb-3">
                                <label asp-for="Input.Password" for="password" class="form-label">Пароль</label>
                                <div class="input-group input-group-merge">
                                    <input asp-for="Input.Password" type="password" autocomplete="new-password" class="form-control" placeholder="Введите свой пароль">
                                    <div class="input-group-text" data-password="false">
                                        <span class="password-eye"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Input.ConfirmPassword" for="password" class="form-label">Пароль</label>
                                <div class="input-group input-group-merge">
                                    <input asp-for="Input.ConfirmPassword" type="password" autocomplete="new-password" class="form-control" placeholder="Введите повторно свой пароль">
                                    <div class="input-group-text" data-password="false">
                                        <span class="password-eye"></span>
                                    </div>
                                </div>
                            </div>

@*                            <div class="mb-3">
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" id="checkbox-signup">
                                    <label class="form-check-label" for="checkbox-signup">I accept <a href="#" class="text-muted">Terms and Conditions</a></label>
                                </div>
                            </div>*@

                            <div class="mb-3 text-center">
                                <button class="btn btn-primary" type="submit"> Зарегистрироваться </button>
                            </div>

                        </form>
                    </div> <!-- end card-body -->
                </div>
                <!-- end card -->

                <div class="row mt-3">
                    <div class="col-12 text-center">
                        <p class="text-muted">Already have account? <a href="pages-login.html" class="text-muted ms-1"><b>Log In</b></a></p>
                    </div> <!-- end col-->
                </div>
                <!-- end row -->

            </div> <!-- end col -->
        </div>
        <!-- end row -->
    </div>
    <!-- end container -->
</div>

