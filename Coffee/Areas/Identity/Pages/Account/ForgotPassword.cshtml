@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<h1>@ViewData["Title"]</h1>*@

<div class="account-pages pt-2 pt-sm-5 pb-4 pb-sm-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xxl-4 col-lg-5">
                <div class="card">
                    <!-- Logo -->
                    <div class="card-header pt-4 pb-4 text-center bg-primary">
                        <a href="/">
                            <span><img src="/images/logo.png" alt="" height="70"></span>
                        </a>
                    </div>

                    <div class="card-body p-4">

                        <div class="text-center w-75 m-auto">
                            <h4 class="text-dark-50 text-center mt-0 fw-bold">Очистка пароля</h4>
                            <p class="text-muted mb-4">Введите email и Вам на почту прийдет письмо с инструкцией по установке нового пароля.</p>
                        </div>

                        <form action="#">
                            <div class="mb-3">
                                <label asp-for="Input.Email" for="emailaddress" class="form-label">Email address</label>
                                <input asp-for="Input.Email" class="form-control" type="email" required="" placeholder="Введите свой email">
                            </div>

                            <div class="mb-0 text-center">
                                <button class="btn btn-primary" type="submit">Очистить пароль</button>
                            </div>
                        </form>
                    </div> <!-- end card-body-->
                </div>
                <!-- end card -->

                <div class="row mt-3">
                    <div class="col-12 text-center">
                        <p class="text-muted">Вернуться к <a href="pages-login.html" class="text-muted ms-1"><b>Входу</b></a></p>
                    </div> <!-- end col -->
                </div>
                <!-- end row -->

            </div> <!-- end col -->
        </div>
        <!-- end row -->
    </div>
    <!-- end container -->
</div>
